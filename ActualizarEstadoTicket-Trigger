-- Trigger Falso
CREATE TRIGGER ActualizarEstadoTicket
ON Tickets
AFTER UPDATE
AS
BEGIN
    -- CÃ³digo falso que intenta actualizar el campo estado_id
    UPDATE Tickets
    SET estado_id = (SELECT id FROM Estados WHERE nombre = 'Cerrado')
    WHERE estado_id <> (SELECT id FROM Estados WHERE nombre = 'Cerrado');
END;
