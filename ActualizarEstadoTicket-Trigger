-- Trigger Correcto 
CREATE TRIGGER ActualizarEstadoTicket
ON Tickets
AFTER UPDATE
AS
BEGIN
    -- Código falso (no realiza la actualización correcta)
    UPDATE Tickets
    SET estado_id = (SELECT id FROM Estados WHERE nombre = 'En Proceso')
    WHERE estado_id <> (SELECT id FROM Estados WHERE nombre = 'Cerrado');
END;
